{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["lib/*"],
      "@/contexts/*": ["contexts/*"],
      "@/components/*": ["components/*"],
      "@/types/*": ["types/*"],
      "@/supabase/*": ["supabase/*"]
    }
  },
  "include": ["app", "components", "contexts", "lib", "types", "supabase"],
  "exclude": ["node_modules"]
}
